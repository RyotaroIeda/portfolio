<div class="sauna-index">
	<div class="container">
		<div class="contents-title text-center">
			<h3 class="index-title">
				サウナ一覧
				<div class="btn-group">
				<button class="btn btn-secondary btn-info btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					並び順
				</button>
				<div class="dropdown-menu">
					<li class="dropdown-item"><%= link_to "新しい順", saunas_path(latest: "true") %></li>
					<li class="dropdown-item"><%= link_to "古い順", saunas_path(old: "true") %></li>
					<li class="dropdown-item"><%= link_to "名前順", saunas_path(name: "true") %></li>
				</div>
			</div>
			</h3>
		</div>
		<div class="row">
			<% @saunas.each do |sauna| %>
				<% if sauna.privacy == "1" %>
					<div class="col-md-4">
						<div class="card">
							<%= attachment_image_tag sauna, :image, fallback: "no-image.png", class: "card-img-top" %>
							<div class="card-body text-center">
								<h5 class="card-title"><%= sauna.name %></h5>
								<%= link_to "詳細を見る", sauna_path(sauna.id), class: "btn btn-info" %>
							</div>
						</div>
					</div>
				<% elsif (user_signed_in?) && (sauna.user_id == current_user.id) && (sauna.privacy == "2") %>
					<div class="col-md-4">
						<div class="card">
							<%= attachment_image_tag sauna, :image, fallback: "no-image.png", class: "card-img-top" %>
							<div class="card-body text-center">
								<h5 class="card-title"><%= sauna.name %>(非公開)</h5>
								<%= link_to "詳細を見る", sauna_path(sauna.id), class: "btn btn-info" %>
							</div>
						</div>
					</div>
				<% end %>
			<% end %>
		</div>
		<%= paginate @saunas %>
	</div> 
</div>

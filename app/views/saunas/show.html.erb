<div class="sauna-show">
  <div class="container">
    <div class="row">
      <div class="col-xl-4 col-12 mt-5">
        <div class="card shadow rounded">
          <div class="card-header">
            <h4 class="show-field-header">
              <%= @sauna.name %>
              <%= render "favorites/favorite", sauna: @sauna %>
            </h4>
          </div>
          <%= attachment_image_tag @sauna, :image, fallback: "no-image.png", class: "show-image" %>
          <% if @sauna.user_id == current_user.id %>
            <%= link_to "#{@sauna.name}の情報を変更する", edit_sauna_path(@sauna), class: "btn btn-sm btn-info" %>
            <%= link_to "#{@sauna.name}を削除する", sauna_path(@sauna), method: :delete, data: { confirm: "#{@sauna.name}を削除しますか？" }, class: "btn btn-sm btn-danger" %>
          <% end %>
          <div class="card-body">
            <div class="d-flex justify-content-center">
              <%= link_to "https://twitter.com/share?url=#{request.url}/&text=#{@sauna.name}/&hashtags=SaunaCamp", class: 'twitter', target: '_blank' do %>
                <i class="fab fa-twitter" style='color: #3399FF;'></i>ツイートする
              <% end %>
              <div class="fb-share-button" data-href="https://developers.facebook.com/docs/plugins/" data-layout="button" data-size="small"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">シェアする</a></div>
              <div id="fb-root"></div>
              <script async defer crossorigin="anonymous" src="https://connect.facebook.net/ja_JP/sdk.js#xfbml=1&version=v15.0" nonce="zNL9Srtm"></script>
              <div class="line-it-button" data-lang="ja" data-type="share-a" data-env="REAL" data-url="http://0.0.0.0:3000" data-color="default" data-size="small" data-count="false" data-ver="3" style="display: none;"></div>
              <script src="https://www.line-website.com/social-plugins/js/thirdparty/loader.min.js" async="async" defer="defer"></script>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xl-8 col-12 mt-5">
        <div class="card shadow rounded">
          <div class="card-header">
            <h4>詳細情報</h4>
          </div>
          <div class="card-body show-card-body">
            <p class="select-genre mt-4 mb-2">
              <i class="far fa-circle fa-fw"></i>営業情報
            </p>
          </div>
          <div class="row mb-1">
            <div class="col-sm-4 col-6 text-left pl-4">
              <i class="fas fa-map-marker-alt fa-fw"></i>住所
            </div>
            <div class="col-sm-8 col-6 text-left">
              <%= @sauna.address %>
            </div>
          </div>
          <div class="row mb-1">
            <div class="col-sm-4 col-6 text-left pl-4">
              <i class="fas fa-map-marker-alt fa-fw"></i>ホームページ
            </div>
            <% if @sauna.http != nil %>
              <div class="col-sm-8 col-6 text-left">
                <%= link_to @sauna.http, @sauna.http %>
              </div>
            <% end %>
          </div>
          <div class="row mb-1">
            <div class="col-sm-4 col-6 text-left pl-4">
              <i class="fas fa-phone fa-fw"></i>電話番号
            </div>
            <div class="col-sm-8 col-6 text-left">
              <%= @sauna.tel %>
            </div>
          </div>
          <div class="row mb-1">
            <div class="col-sm-4 col-6 text-left pl-4">
              <i class="fas fa-hourglass-start fa-fw"></i>開店時間
            </div>
            <div class="col-sm-8 col-6 text-left">
              <%= @sauna.open_time.strftime("%H:%M") %>
            </div>
          </div>
          <div class="row mb-1">
            <div class="col-sm-4 col-6 text-left pl-4">
              <i class="fas fa-hourglass-end fa-fw"></i>閉店時間
            </div>
            <div class="col-sm-8 col-6 text-left">
              <%= @sauna.close_time.strftime("%H:%M") %>
            </div>
          </div>
          <div class="row mb-1">
            <div class="col-sm-4 col-6 text-left pl-4">
              <i class="fas fa-walking fa-fw"></i>アクセス
            </div>
            <div class="col-sm-8 col-6 text-left">
              <%= @sauna.access %>
            </div>
          </div>
          <div class="card-body show-card-body">
            <p class="select-genre mt-4 mb-2">
              <i class="far fa-circle fa-fw"></i>施設情報
            </p>
          </div>
          <div class="row mb-1">
            <div class="col-sm-4 col-6 text-left pl-4">
              <i class="fas fa-temperature-high fa-fw"></i>サウナ温度
            </div>
            <div class="col-sm-8 col-6 text-left">
              <%= @sauna.sauna_temperature %>℃
            </div>
          </div>
          <div class="row mb-1">
            <div class="col-sm-4 col-6 text-left pl-4">
              <i class="fas fa-user-alt fa-fw"></i>サウナ収容人数
            </div>
            <div class="col-sm-8 col-6 text-left">
              <%= @sauna.sauna_capacity %>人
            </div>
          </div>
          <div class="row mb-1">
            <div class="col-sm-4 col-6 text-left pl-4">
              <i class="fas fa-hot-tub fa-fw"></i>サウナ詳細
            </div>
            <div class="col-sm-8 col-6 text-left">
              <%= @sauna.sauna_body %>
            </div>
          </div>
          <div class="row mb-1">
            <div class="col-sm-4 col-6 text-left pl-4">
              <i class="fas fa-temperature-low fa-fw"></i>水風呂温度
            </div>
            <div class="col-sm-8 col-6 text-left">
              <%= @sauna.water_temperature %>℃
            </div>
          </div>
          <div class="row mb-1">
            <div class="col-sm-4 col-6 text-left pl-4">
              <i class="fas fa-user-alt fa-fw"></i>水風呂収容人数
            </div>
            <div class="col-sm-8 col-6 text-left">
              <%= @sauna.water_capacity %>人
            </div>
          </div>
          <div class="row mb-1">
            <div class="col-sm-4 col-6 text-left pl-4">
              <i class="fas fa-tint fa-fw"></i>水風呂詳細
            </div>
            <div class="col-sm-8 col-6 text-left">
              <%= @sauna.water_body %>
            </div>
          </div>
          <div class="row mb-1">
            <div class="col-sm-4 col-6 text-left pl-4">
              <i class="fas fa-wind fa-fw"></i>ロウリュ・アウフグースサービス
            </div>
            <div class="col-sm-8 col-6 text-left">
              <% if @sauna.louly_aufgoose == true %>
                有
              <% else %>
                無
              <% end %>
            </div>
          </div>
          <% if (@sauna.louly_aufgoose == true) && (@sauna.louly_body) %>
            <div class="row mb-1">
              <div class="col-sm-4 col-6 text-left pl-4">
                <i class="fas fa-info-circle fa-fw"></i>ロウリュ・アウフグースサービス詳細
              </div>
              <div class="col-sm-8 col-6 text-left">
                <%= @sauna.louly_body %>
              </div>
            </div>
          <% end %>
          <div class="row mb-1">
            <div class="col-sm-4 col-6 text-left pl-4">
              <i class="fas fa-chair fa-fw"></i>休憩スペース
            </div>
            <div class="col-sm-8 col-6 text-left">
              <% if @sauna.rest_space == true %>
                有
              <% else %>
                無
              <% end %>
            </div>
          </div>
          <% if (@sauna.rest_space == true) && (@sauna.rest_body) %>
            <div class="row mb-1">
              <div class="col-sm-4 col-6 text-left pl-4">
                <i class="fas fa-info-circle fa-fw"></i>休憩スペース詳細
              </div>
              <div class="col-sm-8 col-6 text-left">
                <%= @sauna.rest_body %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="container">
        <div class="row">
          <div class="col-xl-12 my-5">
            <div class="card shadow rounded">
              <div class="card-header text-center">
                <h4>口コミ</h4>
              </div>
              <% if user_signed_in? %>
                <%= form_with(model: [@sauna, @comment], local: true) do |f| %>
                  <%= f.text_area :content, class: "form-control", rows: 5 %>
                  <%= f.hidden_field :sauna_id, value: @sauna.id %>
                  <%= button_tag type: "submit", class: "btn btn-success float-right" do %>
                    <i class="far fa-comments"></i> コメントする
                  <% end %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="container">
        <div class="row">
          <div class="col-xl-12 my-5">
            <div class="card shadow rounded">
              <div class="card-header text-center">
                <h4>口コミ一覧</h4>
              </div>
              <% @comments.each do |comment| %>
                <div class="review-index">
                  <% unless comment.user.blank? %>
                    <%= link_to user_path(comment.user_id) do %>
                      <%= attachment_image_tag comment.user, :profile_image, fallback: "no-image.png", class:"icon" %>
                      <%= comment.user.name unless comment.user.blank? %>
                    <% end %>
                  <% end %>
                  <br />
                  <%= comment.content %>
                  <% if comment.user_id == current_user.id %>
                    <%= link_to "口コミを削除する", sauna_comment_path(@sauna, comment), data: {confirm: "口コミを削除しますか？"}, method: :delete, class: "btn btn-sm btn-danger float-right" %>
                  <% end %>
                  <br />
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

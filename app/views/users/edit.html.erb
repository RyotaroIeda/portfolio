<% provide(:title, @user.name) %>
<div class="row">
	<div class="col-md-12">
		<% @user.errors.full_messages.each do |message| %>
			<div class="errors_message">
				<%= message %>
			</div>
		<% end %>
		<%= form_with model: @user do |f| %>
		<div class="card" style="width: 54rem;">
			<div class="card-header">プロフィール編集</div>
				<ul class="list-group list-group-flush">
					<% if @user.avatar.attached? %>
						<li class="list-group-item">
							<%= image_tag @user.avatar, class: "icon" %>
						</li>
					<% else %>
						<li class="list-group-item">
							<%= image_tag "no-image.png", class: "icon" %>
						</li>
					<% end %>
					<li class="list-group-item">
						<label for="profile_image">アイコン画像</label><div class="body-of-label"><%= f.file_field :avatar, placeholder: "画像を選択" %></div>
					</li>
					<li class="list-group-item">
						<label for="name">名前</label><div class="body-of-label"><%= f.text_field :name, placeholder: @user.name, class: "form-control" %></div>
					</li>
					<li class="list-group-item">
						<label for="homesauna">ホームサウナ</label><div class="body-of-label"><%= f.text_field :homesauna, placeholder: @user.homesauna, class: "form-control" %></div>
					</li>
					<li class="list-group-item">
						<label for="introduce">自己紹介文</label><div class="body-of-label"><%= f.text_area :introduce, placeholder: @user.introduce, class: "form-control" %></div>
					</li>
					<% if @user.id == current_user.id %>
						<li class="list-group-item">
							<input type="submit" value="プロフィールを更新する" class="btn btn-sm btn-info">
						</li>
					<% end %>
				</ul>
		</div>
		<% end %>
	</div>
</div>

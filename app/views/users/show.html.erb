<div class="user-show">
	<div class="row">
		<div class="col-md-12">
			<div class="card" style="width: 54rem;">
				<div class="card-header">ユーザー情報</div>
					<ul class="list-group list-group-flush">
						<li class="list-group-item">
							<label for="name">名前</label><div class="body-of-label"><%= current_user.name %></div>
						</li>
						<li class="list-group-item">
							<label for="email">メールアドレス</label><div class="body-of-label"><%= current_user.email %></div>
						</li>
						<li class="list-group-item">
							<%= link_to "メールアドレス・パスワードを変更する", edit_user_registration_path, class: "btn btn-sm btn-info" %>
						</li>
					</ul>
			</div>
		</div>
	</div>
</div>

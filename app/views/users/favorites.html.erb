<div class="sauna-index">
	<div class="container">
		<div class="contents-title text-center">
			<h3 class="index-title">お気に入りサウナ一覧</h3>
		</div>
		<div class="row">
			<% @favorites.each do |favorite| %>
				<div class="col-md-4">
					<div class="card">
						<%= attachment_image_tag favorite, :image, fallback: "no-image.png", class: "card-img-top" %>
						<div class="card-body text-center">
							<h5 class="card-title"><%= favorite.name %></h5>
							<%= link_to "詳細を見る", sauna_path(favorite.id), class: "btn btn-info" %>
						</div>
					</div>
				</div>
			<% end %>
		</div>
		<%= paginate @favorites %>
	</div> 
</div>

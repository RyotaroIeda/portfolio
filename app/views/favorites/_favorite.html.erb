<div class='star-btn' id="favorite_<%= sauna.id %>">
  <% if !Favorite.exists?(user_id: current_user.id, sauna_id: sauna.id) %>
    <%= link_to sauna_favorites_path(sauna.id), method: :post, remote: true, class:"like-btn" do %>
      <i class="far fa-sm fa-star" style="color:gold;"></i>
    <% end %>
    <span class="star-count1"><%= sauna.favorites.count %></span>
  <% else %>
    <%= link_to sauna_favorites_path(sauna.id), method: :delete, remote: true, class: "like-btn" do %>
      <i class="fas fa-sm fa-star" style="color:gold;"></i>
    <% end %>
    <span class="star-count2"><%= sauna.favorites.count %></span>
  <% end %>
</div>
